  <script>
    function updateScore() {
    let scoreFinal = document.getElementById("endGame_score");
    $.ajax({
      url: "/kg/updateScore",
      type: "POST",
      data: {
        scoreFinal: scoreFinal.innerText, // 태그 사이 들어간 값을 가져옴
      },
      success: function(data) {
        if (data == "updateSuc"){
          alert('점수 적용 완료!!!!!!!!!!')
          window.location="/kg/logout1"
        } else if(data == "soSmall") alert("현재 점수가 최고 점수보다 낮습니다.")
        else {alert('잘못된 요청입니다.')}
      }
    })
  }
  </script>
  

